machine:
  services:
    - docker
  node:
    version: 4.2.4
  environment:
    BUILD_ALL: 1

dependencies:
  override:
    - docker info
    {{#each dependencies}}
      {{{this}}}
    {{/each}}


deployment:
  hub:
    tag: /v[0-9]+(\.[0-9]+)*/
    commands:
      - docker login -e $DOCKER_EMAIL -u $DOCKER_USER -p $DOCKER_PASS
      {{#each deployments}}
        {{{this}}}
      {{/each}}
